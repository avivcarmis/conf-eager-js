{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "module": "umd",
    "target": "es6",
    "moduleResolution": "node",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "removeComments": false,
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}